@model Pokedex.Application.ViewModel.AddPokemonViewModel

@{
    ViewData["Title"] = "Delete Pokemon";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header badge-black text-white text-center">
                <h3>Delete Pokemon</h3>
            </div>
            <div class="card-body">
                <img src="@Model.PhotoUrl" class="card-img-top offset-2" alt="@Model.Name">
                <h5 class="text-center">¿Are you sure want to delete @Model.Name?</h5>
                        <form method="post" asp-controller="Pokemon" asp-action="DeletePost" class="d-flex justify-content-center">
                            <input type="hidden" asp-for="Id"/>
                                <button type="submit" class="btn btn-danger me-2">Delete</button>
                            <a asp-controller="Pokemon" asp-action="Index" class="btn btn-success">Cancel</a>
                        </form>
                    </div>
            </div>
        </div>
    </div>
